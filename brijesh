    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String t1=jTextField1.getText();
         String t2=jTextField2.getText();
            try{
           
        Class.forName("com.mysql.jdbc.Driver");
        Connection conn = DriverManager.getConnection(DB_URL1, USER1, PASS1);
        Statement stmt = conn.createStatement();
        stmt.executeUpdate("insert into stud (name,rollno) values('"+t1+"','"+t2+"')");
          } catch (Exception e) {
         e.printStackTrace();
      } 
       jTextField1.setText("");
       jTextField2.setText("");
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
            try{
        Class.forName("com.mysql.jdbc.Driver");
        Connection conn = DriverManager.getConnection(DB_URL1, USER1, PASS1);
         Statement stmt = conn.createStatement();
         ResultSet rs = stmt.executeQuery("select * from stud"); 
         // Extract data from result set
         while (rs.next()) {
            System.out.println("ID: " + rs.getInt("id"));
            System.out.println("Name: " + rs.getString("name"));
            System.out.println("Roll No: " + rs.getString("rollno"));
         }
      } catch (Exception e) {
         e.printStackTrace();
      } 
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
         String t1=jTextField1.getText();
         String t2=jTextField2.getText();
            try{
           
        Class.forName("com.mysql.jdbc.Driver");
        Connection conn = DriverManager.getConnection(DB_URL1, USER1, PASS1);
        Statement stmt = conn.createStatement();
        stmt.executeUpdate("update stud set name='"+t1+"',rollno='"+t2+"' where rollno='"+t2+"'");
          } catch (Exception e) {
         e.printStackTrace();
      } 
       jTextField1.setText("");
       jTextField2.setText("");
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
         String t1=jTextField1.getText();
         String t2=jTextField2.getText();
            try{
           
        Class.forName("com.mysql.jdbc.Driver");
        Connection conn = DriverManager.getConnection(DB_URL1, USER1, PASS1);
        Statement stmt = conn.createStatement();
        stmt.executeUpdate("delete from stud where rollno='"+t2+"'");
          } catch (Exception e) {
         e.printStackTrace();
      } 
       jTextField1.setText("");
       jTextField2.setText("");
    }                                        

